#ifndef CONSTANTS_H
#define CONSTANTS_H

/* definite in constants.c */

/**
    nome della tabella su cui si vuole basare il fs
 */
extern const char* TABLE;

/**
    Parole chiave che il programma deve capire, + "%%"

    (incidentalmente numero di KEYWORDS == SIZE + 1, per "%%")
*/
extern const char* KEYWORDS[];

/**
    colonne della tabella su cui si vuole basare il fs
 */
extern const char* COLUMNS[];

/**
    formati (supportati da sqlite3_*printf) delle colonne
*/
extern const char* FORMATS[];

/**
    Numero di colonne

    (incidentalmente = numero di KEYWORDS - 1, per "%%")
 */
extern const int SIZE;

/**
    colonne aggiuntive di TABLE non corrispondenti a nessuna KEYWORDS
    (ad esempio una colonna "tipo del file", o "permessi")

    sull'ordine e l'uso boh?
 */
extern const char* COLUMNS_MISC[];

/**
    numero di colonne di COLUMNS_MISC
 */
extern const int SIZE_MISC;

#endif
